# OpenRouter API Configuration
# Uzyskaj klucz API z: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI API Configuration (dla Explain Your Move)
# Uzyskaj klucz API z: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx
OPENAI_ORG_ID=org-xxx

# Supabase Configuration
# Znajdź te wartości w: https://app.supabase.com/project/_/settings/api

# Backend (Node/SSR) - używa service_role key (TAJNY, nie wycieknie do przeglądarki)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here

# Frontend (bundle JS w przeglądarce) - używa anon key (publiczny, bezpieczny)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# Optional: Public site URL (for redirects, emails, etc.)
PUBLIC_SITE_URL=http://localhost:4321

# WebSocket Server (dla Explain Your Move)
PUBLIC_WS_URL=ws://localhost:3001

# Game Limits (Explain Your Move)
EXPLAIN_DAILY_LIMIT=20
EXPLAIN_GUEST_DAILY_LIMIT=5
EXPLAIN_ROOM_TTL_MINUTES=60

